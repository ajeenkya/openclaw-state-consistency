{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/intent_extraction.schema.json",
  "title": "IntentExtraction",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent",
    "confidence",
    "reason"
  ],
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "assertive",
        "planning",
        "hypothetical",
        "historical",
        "retract"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "reason": {
      "type": "string",
      "minLength": 3,
      "maxLength": 600
    },
    "domain": {
      "type": "string",
      "enum": [
        "travel",
        "family",
        "project",
        "financial",
        "profile",
        "school",
        "general"
      ]
    }
  }
}
